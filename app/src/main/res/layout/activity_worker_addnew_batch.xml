<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Worker.Worker_AddnewBatch">
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/primary_bg"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rockwell_bold"
                android:text="Add New Batch"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textView2222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/rockwell"
        android:text="Batch Name"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/batchname_broiler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/batchname_broiler"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <TextView
        android:id="@+id/textView233"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rockwell"
        android:text="Arrival Date"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/arrivaldate_txt_broiler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/arrivaldate_txt_broiler"
        app:layout_constraintTop_toBottomOf="@+id/batchname_broiler" />

    <TextView
        android:id="@+id/textView244"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/rockwell"
        android:text="Total Quantity"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/totalqty_broiler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/totalqty_broiler"
        app:layout_constraintTop_toBottomOf="@+id/arrivaldate_txt_broiler" />


    <Button
        android:id="@+id/btn_addbatch_broiler"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Add"
        android:background="@drawable/primary_btn"
        android:textSize="18sp"
        app:backgroundTint="?attr/colorControlNormal"
        app:backgroundTintMode="add"
        app:layout_constraintEnd_toEndOf="@+id/totalcst_broiler"
        app:layout_constraintStart_toStartOf="@+id/totalcst_broiler"
        app:layout_constraintTop_toBottomOf="@+id/totalcst_broiler" />

    <EditText
        android:id="@+id/batchname_broiler"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/primary_main"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2222" />

    <EditText
        android:id="@+id/totalqty_broiler"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/primary_main"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/arrivaldate_txt_broiler"
        app:layout_constraintStart_toStartOf="@+id/arrivaldate_txt_broiler"
        app:layout_constraintTop_toBottomOf="@+id/textView244" />


    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Total Cost"
        android:fontFamily="@font/rockwell"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/totalcst_broiler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/totalcst_broiler"
        app:layout_constraintTop_toBottomOf="@+id/totalqty_broiler" />

    <EditText
        android:id="@+id/totalcst_broiler"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number"
        android:backgroundTint="@color/primary_main"
        app:layout_constraintEnd_toEndOf="@+id/totalqty_broiler"
        app:layout_constraintStart_toStartOf="@+id/totalqty_broiler"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/arrivaldate_txt_broiler"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="MM/DD/YYYY"
        android:drawableRight="@drawable/calender_icon"
        android:paddingRight="15dp"
        android:fontFamily="@font/rockwell"
        android:textSize="18sp"
        android:textColor="@color/primary_text"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@+id/batchname_broiler"
        app:layout_constraintStart_toStartOf="@+id/batchname_broiler"
        app:layout_constraintTop_toBottomOf="@+id/textView233" />
</androidx.constraintlayout.widget.ConstraintLayout>